{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'flexible_shipping_fee', 'flexible_shipping_fee_rate'] %}

{% block title %}送料設定{% if rate.id %}編集{% else %}新規作成{% endif %}{% endblock %}
{% block sub_title %}フレキシブル送料{% endblock %}

{% block main %}
    <form name="shipping_rate_form" method="post" action="">
        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <span class="card-title">{{ area.name }} - 送料設定</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.size) }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.size, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.size) }}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.rate) }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.rate, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.rate) }}
                                    <small class="form-text text-muted">円（税込）</small>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.cool_fee) }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.cool_fee, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.cool_fee) }}
                                    <small class="form-text text-muted">円（税込）</small>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.box_fee) }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.box_fee, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.box_fee) }}
                                    <small class="form-text text-muted">円（税込）</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="btn btn-ec-sub btn-lg" href="{{ url('flexible_shipping_fee_admin_rate') }}">戻る</a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-ec-conversion btn-lg px-5">保存</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
