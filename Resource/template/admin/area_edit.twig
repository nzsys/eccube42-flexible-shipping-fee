{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'flexible_shipping_fee', 'flexible_shipping_fee_area'] %}

{% block title %}送料エリア{% if area.id %}編集{% else %}新規作成{% endif %}{% endblock %}
{% block sub_title %}フレキシブル送料{% endblock %}

{% block main %}
    <form name="shipping_area_form" method="post" action="">
        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <span class="card-title">エリア情報</span>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.name) }}</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label">{{ form_label(form.prefectures) }}</label>
                                <div class="col-sm-9">
                                    <div class="row">
                                        {% for child in form.prefectures %}
                                            <div class="col-md-4 col-sm-6">
                                                <div class="form-check">
                                                    {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                                    {{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ form_errors(form.prefectures) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="btn btn-ec-sub btn-lg" href="{{ url('flexible_shipping_fee_admin_area') }}">戻る</a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-ec-conversion btn-lg px-5">保存</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
