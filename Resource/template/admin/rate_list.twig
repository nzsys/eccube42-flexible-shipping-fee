{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'flexible_shipping_fee', 'flexible_shipping_fee_rate'] %}

{% block title %}送料設定管理{% endblock %}
{% block sub_title %}フレキシブル送料{% endblock %}

{% block stylesheet %}
<style>
    .btn-ec-actionIcon {
        font-size: 1.1rem !important;
        padding: 0.5rem 0.75rem !important;
        color: #495057 !important;
    }
    .btn-ec-actionIcon:hover {
        color: #212529 !important;
        background-color: #f8f9fa !important;
    }
</style>
{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <span class="card-title">送料設定一覧</span>
                    </div>
                    <style>.tbl td {vertical-align: middle!important;} .tbl th, .tbl td{padding:5px 10px !important;}</style>
                    <div class="card-body p-0">
                        {% if areas is empty %}
                            <div class="text-center p-4">
                                <p>エリアが登録されていません。</p>
                                <a class="btn btn-primary" href="{{ url('flexible_shipping_fee_admin_area') }}">エリア管理へ</a>
                            </div>
                        {% else %}
                            {% for area in areas %}
                                <div class="p-3 border-bottom">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h5 class="mb-0">{{ area.name }}</h5>
                                        <a class="btn btn-sm btn-ec-regular" href="{{ url('flexible_shipping_fee_admin_rate_new', {'area_id': area.id}) }}">料金追加</a>
                                    </div>

                                    {% set rates = ratesByArea[area.id] %}
                                    {% if rates is empty %}
                                        <p class="text-muted mb-0">送料が設定されていません。</p>
                                    {% else %}
                                        <table class="table table-sm mb-0 tbl">
                                            <thead>
                                                <tr>
                                                    <th>サイズ</th>
                                                    <th>基本送料</th>
                                                    <th>クール便料金</th>
                                                    <th>箱代</th>
                                                    <th class="text-end">操作</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for rate in rates %}
                                                    <tr>
                                                        <td>{{ rate.size }}サイズ</td>
                                                        <td>{{ rate.rate|price }}</td>
                                                        <td>{{ rate.coolFee|price }}</td>
                                                        <td>{{ rate.boxFee|price }}</td>
                                                        <td class="text-end">
                                                            <a href="{{ url('flexible_shipping_fee_admin_rate_edit', {'id': rate.id}) }}" class="btn btn-sm btn-ec-actionIcon me-2">
                                                                <i class="fa fa-pencil"></i>
                                                            </a>
                                                            <a href="#" class="btn btn-sm btn-ec-actionIcon" data-bs-toggle="modal" data-bs-target="#deleteRateModal{{ rate.id }}">
                                                                <i class="fa fa-trash"></i>
                                                            </a>
                                                        </td>
                                                    </tr>

                                                    <!-- Delete Modal -->
                                                    <div class="modal fade" id="deleteRateModal{{ rate.id }}" tabindex="-1">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">削除確認</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>{{ area.name }}の{{ rate.size }}サイズ送料を削除してもよろしいですか？</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
                                                                    <form method="post" action="{{ url('flexible_shipping_fee_admin_rate_delete', {'id': rate.id}) }}" style="display: inline;">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('flexible_shipping_fee_admin_rate_delete' ~ rate.id) }}">
                                                                        <input type="hidden" name="_method" value="DELETE">
                                                                        <button type="submit" class="btn btn-danger">削除</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
